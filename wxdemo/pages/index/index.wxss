.slides {
  height: 380rpx;
}

 .slides image {
  width: 100%;
  height: 100%;
} 

.grids {
  display: flex;
  flex-wrap: wrap;
  background-color: #fff;
  font-size: 28rpx;
  border-top: 1rpx solid #eee;
  border-left: 1rpx solid #eee;
}

.grids .item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 33.333%;
  height: 250rpx;
  border-right: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  box-sizing: border-box;
}

.grids .item image {
  width: 70rpx;
  height: 70rpx;
}

.grids .item text {
  margin-top: 20rpx;
  color: #888;
  display: block;
}